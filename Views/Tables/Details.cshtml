@model Pantus.Models.TbTable

@{
    ViewData["Title"] = "Chi Tiết Bàn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-primary">Chi Tiết Bàn</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-10">
        <dl class="row">
            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.TableNumber)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TableNumber)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.Capacity)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Capacity)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.People)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.People)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>

            <dt class="col-sm-3 text-danger font-weight-bold">
                @Html.DisplayNameFor(model => model.Hour)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Hour)
            </dd>
        </dl>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model.TableId" class="btn btn-warning mr-2">Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay Lại Danh Sách</a>
</div>
