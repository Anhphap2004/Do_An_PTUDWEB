@model IEnumerable<Pantus.Models.TbBlog>
@foreach (var p in Model)
{
    string sUrl = $"/blog/{p.Alias}-{p.BlogId}.html";
    <div class="col-md-6 col-lg-4 wow bounceInUp" data-wow-delay="0.1s">
        <div class="blog-item">
            <div class="overflow-hidden rounded">
                <img src="@p.Image" class="img-fluid w-100" alt="">
            </div>
            <div class="blog-content mx-4 d-flex rounded bg-light">
                <div class="text-dark bg-primary rounded-start">
                    <div class="h-100 p-3 d-flex flex-column justify-content-center text-center">
                        <p class="fw-bold mb-0">@p.CreatedDate</p>
                    </div>
                </div>
                <a href="@sUrl" class="h5 lh-base my-auto h-100 p-3">@p.Title</a>
            </div>
        </div>
    </div>
}