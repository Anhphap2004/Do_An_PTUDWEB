@model Pantus.Models.TbTable;

<!-- Hero Start -->
<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center">
        <h1 class="display-1 mb-4 text-danger">Đặt Bàn</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#" class="text-danger">Trang Chủ</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-danger">Dịch Vụ</a></li>
            <li class="breadcrumb-item text-danger" aria-current="page">Đặt Bàn</li>
        </ol>
    </div>
</div>
<!-- Hero End -->
<!-- Book Table Start -->
<div class="container py-6">
    <div class="row align-items-center">
        <!-- Hình ảnh bên trái -->
        <div class="col-lg-6 mb-5 mb-lg-0">
            <img src="https://cdn.pixabay.com/photo/2023/03/21/20/32/set-table-7868140_1280.jpg" class="img-fluid rounded shadow" alt="Hình ảnh bàn ăn minh họa">
        </div>

        <!-- Form đặt bàn bên phải -->
        <div class="col-lg-6">
            <div class="bg-light border border-danger rounded p-5 shadow">
                <div class="text-center mb-4">
                    <h2 class="text-danger mb-3">Đặt Bàn Ngay</h2>
                    <p class="text-secondary">Vui lòng điền thông tin bên dưới để hoàn tất việc đặt bàn của bạn.</p>
                </div>

                <!-- Hiển thị thông báo lỗi hoặc thành công -->
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.Message
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <!-- Form đặt bàn -->
                <form asp-controller="Booking" asp-action="Booking" method="post">
                    <!-- Họ và tên -->
                    <div class="mb-3">
                        <label for="name" class="form-label text-danger">Họ và Tên</label>
                        <input type="text" asp-for="FullName" class="form-control border-danger p-3" placeholder="Nhập họ và tên" required>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="mb-3">
                        <label for="phone" class="form-label text-danger">Số Điện Thoại</label>
                        <input type="tel" asp-for="Phone" class="form-control border-danger p-3" placeholder="Nhập số điện thoại" required>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <!-- Số lượng khách -->
                    <div class="mb-3">
                        <label for="guests" class="form-label text-danger">Số Lượng Khách</label>
                        <input type="number" asp-for="People" class="form-control border-danger p-3" placeholder="Số khách" min="1" required>
                        <span asp-validation-for="People" class="text-danger"></span>
                    </div>

                    <!-- Ngày -->
                    <div class="mb-3">
                        <label for="date" class="form-label text-danger">Ngày</label>
                        <input type="date" asp-for="CreateDate" class="form-control border-danger p-3" required>
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>

                    <!-- Giờ -->
                    <div class="mb-3">
                        <label for="time" class="form-label text-danger">Giờ</label>
                        <input type="time" asp-for="Hour" class="form-control border-danger p-3" required>
                        <span asp-validation-for="Hour" class="text-danger"></span>
                    </div>

                    <!-- Nút gửi -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger px-5 py-2">Đặt Bàn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Book Table End -->
