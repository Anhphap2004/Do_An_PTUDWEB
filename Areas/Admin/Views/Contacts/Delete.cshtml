@model Pantus.Models.TbContact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
    }

    h1 {
        text-align: center;
        font-size: 50px;
        font-family: 'Playball', cursive;
        color: #f97316;
        margin-bottom: 20px;
    }

    .card {
        border: none;
        border-top: 5px solid #f97316;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .card-body {
        padding: 20px;
    }

    dt {
        font-weight: bold;
        color: #555;
    }

    dd {
        color: #333;
        margin-bottom: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<h1>Xóa liên hệ</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h4 class="text-center text-danger">Bạn có chắc chắn muốn xóa liên hệ này?</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Họ và Tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4">Tin nhắn</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Message)</dd>

                    <dt class="col-sm-4">Đã đọc</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsRead)</dd>

                    <dt class="col-sm-4">Ngày tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedDate)</dd>

                    <dt class="col-sm-4">Người tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedBy)</dd>

                    <dt class="col-sm-4">Ngày sửa</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ModifiedDate)</dd>

                    <dt class="col-sm-4">Người sửa</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ModifiedBy)</dd>
                </dl>
                <form asp-action="Delete" class="text-center mt-4">
                    <input type="hidden" asp-for="ContactId" />
                    <button type="submit" class="btn btn-danger px-4 py-2">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 py-2 ms-2">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>
