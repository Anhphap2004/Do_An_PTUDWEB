@model Pantus.Models.TbContact

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-warning my-4">Chi tiết liên hệ</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-warning shadow-sm">
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Họ và Tên</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4">Số điện thoại</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Tin nhắn</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Message)</dd>

                        <dt class="col-sm-4">Đã đọc</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsRead)
                            {
                                <span class="badge bg-success">Đã đọc</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Chưa đọc</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Ngày tạo</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedDate)</dd>

                        <dt class="col-sm-4">Người tạo</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedBy)</dd>

                        <dt class="col-sm-4">Ngày sửa</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ModifiedDate)</dd>

                        <dt class="col-sm-4">Người sửa</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ModifiedBy)</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-warning me-2">Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>
