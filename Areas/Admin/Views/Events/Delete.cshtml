@model Pantus.Models.TbEvent

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold" style="font-family: 'Playball', cursive; font-size: 36px; color: #ff6600;">
            Xoá Sự Kiện
        </h1>
        <hr class="w-25 mx-auto" style="border-top: 3px solid #ff6600;">
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="p-5 rounded shadow" style="background-color: #fffaf0; border: 1px solid #ffcc99;">
                <form asp-action="Delete">
                    <div class="mb-4 text-center">
                        <img src="@Model.Image" alt="Event Image" class="img-fluid rounded shadow-sm"
                             style="width: 500px; height: 300px; max-height: 400px; border: 1px solid #ffcc99;">
                    </div>

                    <div class="mb-4 row">
                        <label class="col-sm-3 fw-bold text-success">Tên Sự Kiện:</label>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Title)</div>
                    </div>

                    <div class="mb-4 row">
                        <label class="col-sm-3 fw-bold text-success">Mô Tả:</label>
                        <div class="col-sm-9 text-danger">@Html.DisplayFor(model => model.Description)</div>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold text-success">Chi Tiết:</label>
                        <div class="border rounded p-3" style="background-color: #ffffff;">
                            @Html.Raw(Model.Details)
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label class="col-sm-3 fw-bold text-success">Hiển Thị:</label>
                        <div class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success text-white px-3 py-2">Đang Hiển Thị</span>
                            }
                            else
                            {
                                <span class="badge bg-danger text-white px-3 py-2">Không Hiển Thị</span>
                            }
                        </div>
                    </div>

                    <input type="hidden" asp-for="EventId" />

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-outline-danger px-5 me-2">
                            <i class="fas fa-trash-alt"></i> Xoá
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-5">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
