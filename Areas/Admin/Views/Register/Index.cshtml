@model Pantus.Areas.Admin.Models.AdminUser
@{
    Layout = "";
}

<!doctype html>
<html lang="vi" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Pantus | Nhà Hàng Chất Lượng</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/admin/images/favicon.ico" />

    <!-- Library / Plugin Css Build -->
    <link rel="stylesheet" href="~/admin/css/core/libs.min.css">

    <!-- Custom Css -->
    <link rel="stylesheet" href="~/admin/css/aprycot.min.css?v=1.0.0">
</head>
<body class=" " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">
    <div class="wrapper">
        <section class="container-fluid bg-circle-login">
            <div class="row align-items-center">
                <div class="col-md-12 col-lg-7 col-xl-4">
                    <div class="d-flex justify-content-center mb-0">
                        <div class="card-body mt-5">
                            <a href="#" style="display: inline-block; transform: translateY(-30px); transition: transform 0.3s ease;">
                                <img src="~/admin/images/favicon.png" class="img-fluid logo-img" alt="img5">
                            </a>

                            <h2 class="mb-2 text-center text-danger" style="font-family: 'Playball', cursive;">Đăng Ký Tài Khoản</h2>
                            <p class="text-center">Tạo tài khoản mới để bắt đầu</p>
                            <form asp-controller="Register" asp-action="Index">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="full-name" class="form-label">Tên Đăng Nhập</label>
                                            <input type="text" asp-for="Username" class="form-control form-control-sm" id="full-name">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="last-name" class="form-label">Họ và Tên</label>
                                            <input type="text" asp-for="FullName" class="form-control form-control-sm" id="last-name" >
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" asp-for="Email" class="form-control form-control-sm" id="email" >
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="phone" class="form-label">Số Điện Thoại</label>
                                            <input type="text" asp-for="Phone" class="form-control form-control-sm" id="phone" >
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="password" class="form-label">Mật Khẩu</label>
                                            <input type="password" asp-for="Password" class="form-control form-control-sm" id="password" >
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="confirm-password" class="form-label">Xác Nhận Mật Khẩu</label>
                                            <input type="password" class="form-control form-control-sm" id="confirm-password">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 d-flex justify-content-center">
                                        <div class="form-check mb-3">
                                            <input type="checkbox" asp-for="IsActive" class="form-check-input" id="customCheck1">
                                            <label class="form-check-label" for="customCheck1">Tôi đồng ý với các điều khoản sử dụng</label>
                                        </div>
                                    </div>
                                    
                                </div>
                                
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary">Đăng Ký</button>
                                </div>
                              
                                <p class="text-center my-3">Hoặc đăng nhập bằng tài khoản khác?</p>
                                <div class="d-flex justify-content-center">
                                    <ul class="list-group list-group-horizontal list-group-flush">
                                        <li class="list-group-item border-0 pb-0">
                                            <a href="#"><img src="~/admin/images/brands/gm.svg" alt="gm"></a>
                                        </li>
                                        <li class="list-group-item border-0 pb-0">
                                            <a href="#"><img src="~/admin/images/brands/fb.svg" alt="fb"></a>
                                        </li>
                                        <li class="list-group-item border-0 pb-0">
                                            <a href="#"><img src="~/admin/images/brands/im.svg" alt="im"></a>
                                        </li>
                                        <li class="list-group-item border-0 pb-0">
                                            <a href="#"><img src="~/admin/images/brands/li.svg" alt="li"></a>
                                        </li>
                                    </ul>
                                </div>
                                <p class="mt-3 text-center">
                                    Đã có tài khoản? <a href="sign-in.html" class="text-underline">Đăng Nhập</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-5 col-xl-8 d-lg-block d-none vh-100 overflow-hidden">
                    <img src="~/admin/images/auth/09.png" class="img-fluid sign-in-img" alt="images">
                </div>
            </div>
        </section>
    </div>

    <!-- Required Library Bundle Script -->
    <script src="~/admin/js/core/libs.min.js"></script>

    <!-- External Library Bundle Script -->
    <script src="~/admin/js/core/external.min.js"></script>

    <!-- Mapchart JavaScript -->
    <script src="~/admin/js/charts/dashboard.js"></script>

    <!-- fslightbox JavaScript -->
    <script src="~/admin/js/fslightbox.js"></script>

    <!-- app JavaScript -->
    <script src="~/admin/js/app.js"></script>

    <!-- moment JavaScript -->
    <script src="~/admin/vendor/moment.min.js"></script>
</body>
</html>
