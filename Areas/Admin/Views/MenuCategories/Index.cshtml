@model IEnumerable<Pantus.Models.TbMenuCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center" style="font-family: 'Playball', cursive; font-size: 50px;">Danh sách danh mục</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm mới
    </a>
</div>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th style="width: 5%;">STT</th>
            <th style="width: 20%;">Tiêu Đề</th>
            <th style="width: 15%;">Alias</th>
            <th style="width: 30%;">Mô Tả</th>
            <th style="width: 10%;">Trạng thái</th>
            <th style="width: 20%;" class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            int p = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(p++)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Alias)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Không hoạt động</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i> Xem
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
