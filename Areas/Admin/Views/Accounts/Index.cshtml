@model IEnumerable<Pantus.Models.TbAccount>

@{
    ViewData["Title"] = "Danh sách tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4" style=" font-family: 'Playball' , cursive; font-size: 50px;">@ViewData["Title"]</h1>

<p class="text-success">
    <a asp-action="Create" class="btn btn-primary">Thêm mới tài khoản</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark text-center">
            <tr>
                <th>STT</th>
                <th>Tên Đăng Nhập</th>
                <th>Họ Tên</th>
                <th>Số Điện Thoại</th>
                <th>Gmail</th>
                <th>Trạng Thái</th>
                <th>Phân Quyền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{
                var stt = 1; 
            }
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@(stt++)</td>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Kích hoạt</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Không kích hoạt</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
