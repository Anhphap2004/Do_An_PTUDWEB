@model Pantus.Models.TbMenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="mt-4 text-center text-primary" style="font-family: 'Playball', cursive; font-size: 36px;">Tạo Menu Mới</h1>
        <hr class="w-25 mx-auto" style="border-top: 3px solid orange;">
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="p-4 border rounded shadow-sm" style="background-color: #fff8f0; border-color: orange;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Tiêu Đề -->
                <div class="form-group row">
                    <label asp-for="Title" class="col-sm-3 col-form-label text-danger">Tiêu Đề</label>
                    <div class="col-sm-9">
                        <input asp-for="Title" class="form-control" style="border-color: orange;" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <!-- Alias -->
                <div class="form-group row">
                    <label asp-for="Alias" class="col-sm-3 col-form-label text-danger">Alias</label>
                    <div class="col-sm-9">
                        <input asp-for="Alias" class="form-control" style="border-color: orange;" />
                        <span asp-validation-for="Alias" class="text-danger"></span>
                    </div>
                </div>

                <!-- Mô Tả -->
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-3 col-form-label text-danger">Mô Tả</label>
                    <div class="col-sm-9">
                        <input asp-for="Description" class="form-control" style="border-color: orange;" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Mức -->
                <div class="form-group row">
                    <label asp-for="Levels" class="col-sm-3 col-form-label text-danger">Mức</label>
                    <div class="col-sm-9">
                        <input asp-for="Levels" class="form-control" style="border-color: orange;" />
                        <span asp-validation-for="Levels" class="text-danger"></span>
                    </div>
                </div>

                <!-- Menu Cha -->
                <div class="form-group row">
                    <label asp-for="ParentId" class="col-sm-3 col-form-label text-danger">Menu Cha</label>
                    <div class="col-sm-9">
                        <input asp-for="ParentId" class="form-control" style="border-color: orange;" />
                        <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Vị Trí -->
                <div class="form-group row">
                    <label asp-for="Position" class="col-sm-3 col-form-label text-danger">Vị Trí</label>
                    <div class="col-sm-9">
                        <input asp-for="Position" class="form-control" style="border-color: orange;" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>

                <!-- Hiển Thị -->
                <div class="form-group row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9 form-check">
                        <input class="form-check-input" asp-for="IsActive" style="border-color: orange;" />
                        <label asp-for="IsActive" class="form-check-label text-success">Hiển Thị</label>
                    </div>
                </div>

                <!-- Submit -->
                <div class="form-group row text-center">
                    <div class="col-sm-12">
                        <input type="submit" value="Tạo Mới" class="btn btn-outline-success px-4" />
                    </div>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-danger">Quay Lại Danh Sách</a>
            </div>
        </div>
    </div>
</div>
