@model Pantus.Models.TbMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="mt-4 text-center" style="font-family: 'Playball', cursive; font-size: 36px; color: #ff6600;">Xoá Menu Pantus</h1>
        <hr class="w-25 mx-auto" style="border-top: 3px solid #ff6600;">
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-5 shadow-lg" style="background-color: #f8f9fa; border: 1px solid #ced4da;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form asp-action="Delete">
                    <div class="row mb-3">
                        <div class="col-4 text-end text-primary fw-bold">Tiêu Đề:</div>
                        <div class="col-8 text-success">@Html.DisplayFor(model => model.Title)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-end text-primary fw-bold">Alias:</div>
                        <div class="col-8 text-success">@Html.DisplayFor(model => model.Alias)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-end text-primary fw-bold">Mô Tả:</div>
                        <div class="col-8 text-success">@Html.DisplayFor(model => model.Description)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-end text-primary fw-bold">Mức:</div>
                        <div class="col-8 text-success">@Html.DisplayFor(model => model.Levels)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 text-end text-primary fw-bold">Menu Cha:</div>
                        <div class="col-8 text-success">@Html.DisplayFor(model => model.ParentId)</div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-4 text-end text-primary fw-bold">Hiện:</div>
                        <div class="col-8">@Html.DisplayFor(model => model.IsActive)</div>
                    </div>

                    <input type="hidden" asp-for="MenuId" />

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-outline-danger px-4 me-2">Xoá</button>
                        <a asp-action="Index" class="btn btn-outline-warning px-4">Quay Lại Danh Sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
