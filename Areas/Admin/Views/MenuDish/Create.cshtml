@model Pantus.Models.TbMenuItem

@{
    ViewData["Title"] = "Tạo Mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="text-primary" style="font-family: 'Playball', cursive; font-size: 36px;">
            <i class="fas fa-plus-circle"></i> Tạo Sản Phẩm Mới
        </h1>
        <hr class="w-25 mx-auto" style="border-top: 3px solid orange;">
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form asp-action="Create" class="p-4 border rounded shadow-sm" style="background-color: #fff8f0; border-color: orange;">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label"><i class="fas fa-heading"></i> Tiêu Đề</label>
                    <input asp-for="Title" class="form-control border-orange" placeholder="Nhập tiêu đề sản phẩm" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Alias" class="control-label"><i class="fas fa-link"></i> Alias</label>
                    <input asp-for="Alias" class="form-control border-orange" placeholder="Alias cho sản phẩm" />
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="control-label"><i class="fas fa-list-alt"></i> Danh Mục</label>
                    <select asp-for="CategoryId" class="form-control border-orange" asp-items="ViewBag.CategoryId">
                        <option value="0" selected>  Chọn Danh Mục  </option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"><i class="fas fa-file-alt"></i> Mô Tả</label>
                    <textarea asp-for="Description" class="form-control border-orange" rows="3" placeholder="Mô tả chi tiết sản phẩm"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label">Chọn Ảnh</label>
					<div class="input-group">
						<!-- Nút mở elFinder -->
						<div class="input-group-append">
							<button type="button" id="btn-select-image" class="btn btn-primary">
								<i class="fas fa-folder-open"></i> Chọn ảnh
							</button>
						</div>
                        <!-- Input hiển thị đường dẫn ảnh -->
                        <input type="text" class="form-control" asp-for="Image" id="Image" placeholder="Đường dẫn hình ảnh" />
                      
                    </div>
                    <!-- Hiển thị ảnh xem trước -->
                    <img id="preview-image" src="" alt="Preview Image" class="img-thumbnail mt-3" style="max-height: 200px; display: none;" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Detail" class="control-label">Chi Tiết</label>
                    <textarea asp-for="Detail" class="form-control"></textarea>
                    <span asp-validation-for="Detail" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"><i class="fas fa-dollar-sign"></i> Giá</label>
                            <input asp-for="Price" class="form-control border-orange" placeholder="Nhập giá sản phẩm" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="PriceSale" class="control-label"><i class="fas fa-tags"></i> Giá Giảm</label>
                            <input asp-for="PriceSale" class="form-control border-orange" placeholder="Nhập giá giảm" />
                            <span asp-validation-for="PriceSale" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label"><i class="fas fa-boxes"></i> Số Lượng</label>
                    <input asp-for="Quantity" class="form-control border-orange" placeholder="Nhập số lượng sản phẩm" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> Hiển Thị
                    </label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4"><i class="fas fa-save"></i> Tạo Mới</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-danger"><i class="fas fa-arrow-left"></i> Quay Lại</a>
            </div>
        </div>
    </div>
</div>
<script>
    $('#Detail').summernote({
        placeholder: 'Nhập Dữ Liệu Vào Đây Nhaaa',
        tabsize: 2,
        height: 120,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script> 
