@model Pantus.Models.TbMenuItem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold" style="font-family: 'Playball', cursive; font-size: 36px; color: #ff6600;">
            Xoá Sản Phẩm
        </h1>
        <hr class="w-25 mx-auto" style="border-top: 3px solid #ff6600;">
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="p-4 rounded shadow" style="background-color: #fffaf0; border: 1px solid #ffcc99;">
                <form asp-action="Delete" class="px-4">
                    <div class="mb-4">
                        <div class="text-center">
                            <img src="@Model.Image" alt="Product Image" class="img-fluid rounded shadow-sm"
                                 style="max-width: 100%; height: auto; max-height: 300px; border: 1px solid #ffcc99;">
                        </div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label class="col-4  text-success">Tên Sản Phẩm:</label>
                        <div class="col-8">@Html.DisplayFor(model => model.Title)</div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label class="col-4  text-success">Alias:</label>
                        <div class="col-8">@Html.DisplayFor(model => model.Alias)</div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label class="col-4  text-success">Mô Tả:</label>
                        <div class="col-8 text-danger">@Html.DisplayFor(model => model.Description)</div>
                    </div>

                    <div class="mb-3 row align-items-center">
                        <label class="col-4 text-success">Hiển Thị:</label>
                        <div class="col-8">
                            @if (Model.IsActive)
                            {
                                <span class="text-success">Đang Hiển Thị</span>
                            }
                            else
                            {
                                <span class="text-danger">Không Hiển Thị</span>
                            }
                        </div>
                    </div>


                    <input type="hidden" asp-for="MenuItemId" />

                    <div class="text-center  mt-4">
                        <button type="submit" class="btn btn-outline-danger px-5 me-2">
                            <i class="fas fa-trash-alt"></i> Xoá
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-5">
                            <i class="fas fa-arrow-left"></i> Quay Lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

