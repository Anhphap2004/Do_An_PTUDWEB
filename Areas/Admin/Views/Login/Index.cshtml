@using Pantus.Utilities;
@model Pantus.Areas.Admin.Models.AdminUser;
@{
    Layout = null;
}
<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Pantus | Nhà Hàng Chất Lượng</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/admin/images/favicon.ico" />

    <!-- Library / Plugin Css Build -->
    <link rel="stylesheet" href="~/admin/css/core/libs.min.css">

    <!-- Custom Css -->
    <link rel="stylesheet" href="~/admin/css/aprycot.min.css?v=1.0.0">
</head>



<body class=" " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="successMessage" class="alert alert-success"
             style="
            position: fixed; /* Đảm bảo thông báo không đẩy các phần tử khác */
            top: 20px; /* Cách mép trên 20px */
            right: 60px; /* Cách mép phải 20px */
            max-width: 370px; /* Đảm bảo không vượt quá kích thước khung nhìn */
            padding: 15px 20px;
            border-radius: 8px;
            background-color: #28a745;
            color: #fff;
            font-size: 16px;
            font-family: Arial, sans-serif;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 9999; /* Luôn ở trên cùng */
            text-align: left; /* Văn bản căn trái trong hộp thông báo */
            word-wrap: break-word; /* Ngắt dòng nếu nội dung quá dài */
             ">
            @TempData["SuccessMessage"]
        </div>
    }


    <div class="wrapper">
        <section class="container-fluid bg-circle-login" id="auth-sign">
            <div class="row align-items-center">
                <div class="col-md-12 col-lg-7 col-xl-4">
                    <div class="card-body">
                        <a href="#" style="display: inline-block; transform: translateY(-30px); transition: transform 0.3s ease;">
                            <img src="~/admin/images/favicon.png" class="img-fluid logo-img" alt="img5">
                        </a>
                        <h2 class="mb-2 text-center">Đăng Nhập</h2>
                        <p class="text-center">Đăng Nhập Để Giữ Kết Nối.</p>
                        <form asp-controller="Login" asp-action="Index">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="Username" class="form-label">Tên Người Dùng</label>
                                        <input type="text" asp-for="Username" class="form-control form-control-sm" id="Username" aria-describedby="email" placeholder=" ">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="password" class="form-label">Mật Khẩu</label>
                                        <input type="password" asp-for="Password" class="form-control form-control-sm" id="password" aria-describedby="password" placeholder=" ">
                                    </div>
                                </div>
                                <div class="col-lg-12 d-flex justify-content-between">
                                    <div class="form-check mb-3">
                                        <input type="checkbox" class="form-check-input" id="customCheck1">
                                        <label class="form-check-label" for="customCheck1">Nhớ Tài Khoản</label>
                                    </div>
                                    <a href="recoverpw.html">Quên Mật Khẩu?</a>
                                </div>
                                <div class="text-danger mb-3">
                                    @Function._Message
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                
                                <button type="submit" class="btn btn-primary">Đăng Nhập</button>
                            </div>
                            <p class="text-center my-3">hoặc đăng nhập băng tài khoản khác?</p>
                            <div class="d-flex justify-content-center">
                                <ul class="list-group list-group-horizontal list-group-flush">
                                    <li class="list-group-item border-0 pb-0">
                                        <a href="#"><img src="~/admin/images/brands/fb.svg" alt="fb"></a>
                                    </li>
                                    <li class="list-group-item border-0 pb-0">
                                        <a href="#"><img src="~/admin/images/brands/gm.svg" alt="gm"></a>
                                    </li>
                                    <li class="list-group-item border-0 pb-0">
                                        <a href="#"><img src="~/admin/images/brands/im.svg" alt="im"></a>
                                    </li>
                                    <li class="list-group-item border-0 pb-0">
                                        <a href="#"><img src="~/admin/images/brands/li.svg" alt="li"></a>
                                    </li>
                                </ul>
                            </div>
                            <p class="mt-3 text-center">
                                Don’t have an account? <a asp-controller="Register" asp-action="index" class="text-underline">Ấn vào đây để đăng ký.</a>
                            </p>
                        </form>
                    </div>
                </div>
                <div class="col-md-12 col-lg-5 col-xl-8 d-lg-block d-none vh-100 overflow-hidden">
                    <img src="~/admin/images/auth/09.png" class="img-fluid sign-in-img" alt="images">

                </div>
            </div>
        </section>
    </div>
    <!-- Required Library Bundle Script -->
    <script src="~/admin/js/core/libs.min.js"></script>

    <!-- External Library Bundle Script -->
    <script src="~/admin/js/core/external.min.js"></script>

    <!-- Mapchart JavaScript -->
    <script src="~/admin/js/charts/dashboard.js"></script>

    <!-- fslightbox JavaScript -->
    <script src="~/admin/js/fslightbox.js"></script>

    <!-- app JavaScript -->
    <script src="~/admin/js/app.js"></script>

    <!-- moment JavaScript -->
    <script src="~/admin/vendor/moment.min.js"></script>
</body>
</html>